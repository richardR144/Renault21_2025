{% extends ('guest/base.html.twig') %}


{% block metatitle %} Connexion | guest Renault 21 TD{% endblock metatitle %}


{% block main %}
    <main id="mainConnexion">
    <div id="imgForm">
    <div class="renault" id="renault">
        <img src="{{ asset('asset/images/VoitureComplet.jpg') }}" alt="Photo de ma R21 td">
    </div>
    <section class="article">
<div class="tab-content">
    <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
         {% for flash_message in app.flashes('success') %}
            <h2 class="alert alert-success color-success">
                {{ flash_message }}
            </h2>
        {% endfor %}
        {% for flash_message in app.flashes('error') %}
            <h2 class="alert alert-danger color-error">
                {{ flash_message }}
            </h2>
        {% endfor %}
         <form method="post">
            <div class="text-center mb-3">
                        <p>Se connecter avec </p>
                            <div class="btn-group" role="group" aria-label="Social Media Buttons">
                                <button data-mdb-ripple-init type="button" class="btn btn-secondary btn-floating mx-1">
                                    <img src="{{ asset('asset/icones/logoGoogle.png') }}">
                                </button>
                            </div>
                        
                                <p class="text-center">ou :</p>
            <!-- Email input -->
            <div data-mdb-input-init class="form-outline mb-4">
                <label class="form-label" for="email">Email</label>
                <input type="email" name="_username" id="email" class="form-control" />
                
            </div>

            <!-- Password input -->
            <div data-mdb-input-init class="form-outline mb-4">
                <label class="form-label" for="password">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control" />
                
            </div>

            <!-- 2 column grid layout -->
            <div class="row mb-4">
                <div class="col-md-6 d-flex justify-content-center">
                    <!-- Checkbox -->
                    <div class="form-check mb-3 mb-md-0">
                        <label class="form-check-label" for="loginCheck"> Se souvenir de moi </label>
                            <input class="form-check-input" type="checkbox" value="" id="loginCheck" checked/>   
                    </div>
                </div>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Connexion</button>

            <!-- Register buttons -->
            <div class="text-center">
                <p>Vous n'êtes pas encore membre ? <a href="#">Inscrivez-vous !</a></p>
            </div>
        </form>
    </div>
</div>
    </section>
    </div>
    <div class="container2">
        <h4>Le panthéon de la Renault 21 Turbo Diésel</h4>
        <div class="bouton">
            <label>
                <a href="{{ path('list-articles') }}" class="btn btn-primary">Entrez !</a>
            </label>
        </div>
    </div>
    </main>
{% endblock %}