{% block main %}
    <main id="mainConnexion">
    <div id="imgForm">
    <div class="renault" id="renault">
        <img src="{{ asset('images/VoitureComplet.jpg') }}" alt="Photo de ma R21 td">
    </div>
    <section class="article">
<div class="tab-content">
    <div class="tab-pane fade show active"
            id="pills-login"
            role="tabpanel"
            aria-labelledby="tab-login">
         <form method="post">
            <div class="text-center mb-3">
                        <p>Se connecter avec </p>
                            <div class="btn-group" role="group" aria-label="Social Media Buttons">
                                <button data-mdb-ripple-init type="button" class="btn btn-secondary btn-floating mx-1">
                                    <img src="{{ asset('icones/logoGoogle.png') }}">
                                </button>
                            </div>
                        
                                <p class="text-center">ou :</p>
            <!-- Email input -->
            <div data-mdb-input-init class="form-outline mb-4">
                <input type="email" name="_username" id="email" class="form-control" />
                <label class="form-label" for="email">Email</label>
            </div>

            <!-- Password input -->
            <div data-mdb-input-init class="form-outline mb-4">
                <input type="password" name="_password" id="password" class="form-control" />
