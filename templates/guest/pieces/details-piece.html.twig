{% extends 'guest/base.html.twig' %}

{% block title %}Détail de la pièce | guest Renault 21 TD{% endblock %}

{% include 'partial/_header.html.twig' %}

{% block main %}
<main id="mainDetailsPiece">
    <div class="container">
        <h1 class="text-center mb-4">{{ piece.name }}</h1>
        {% if piece.image %}
            <img src="{{ asset('Uploads/pieces/' ~ piece.image) }}" alt="Image de la pièce" class="mb-3" width="300">
        {% endif %}
        <p><strong>Description :</strong> {{ piece.description }}</p>
        <p><strong>Catégorie :</strong> {{ piece.category.name }}</p>
        <p><strong>Créée le :</strong> {{ piece.createdAt|date('d/m/Y H:i') }}</p>
        <a href="{{ path('guest-pieces-list-pieces') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
    </div>
</main>
{% endblock %}

{% include 'partial/_footer.html.twig' %}