{% extends 'guest/base.html.twig' %}

{% block title %}Modifier la pièce | guest Renault 21 TD{% endblock %}



{% block main %}
<div style="
    position: relative;
    min-height: 100vh;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;">

    <!-- Image de fond -->
    <div style="
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        background-image: url('{{ asset('images/r21 face route.webp') }}');
        background-size: cover;
        background-position: center;
        z-index: 1;">
    </div>
    <div style="
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        background: rgba(144, 178, 250, 0.9); 
        z-index: 2;">
    </div>
    <div style="position: relative; z-index: 3; padding: 2rem;">
<main id="mainUpdatePiece">
    <div class="container">
        <h1 class="text-center mb-4">Modifier la pièce</h1>
        {% for flash_message in app.flashes('success') %}
            <div class="alert alert-success">{{ flash_message }}</div>
        {% endfor %}
        {% for flash_message in app.flashes('error') %}
            <div class="alert alert-danger">{{ flash_message }}</div>
        {% endfor %}
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="category" class="form-label">Catégorie :</label>
                <select class="form-select" id="category" name="category-id" required>
                    {#{% for category in categories %}
                        <option value="{{ category.name }}" {% if piece.category and piece.category.name %}selected{% endif %}>
                            {{ category.name }}
                        </option>
                    {% endfor %}#}
                </select>
            </div>
            <div class="form-group mb-3">
                <label>Type d'annonce :</label><br>
                <input type="checkbox" id="vente" name="type[]" value="vente">
                <label for="vente">Vendre</label>
                <input type="checkbox" id="echange" name="type[]" value="echange">
                <label for="echange">Échanger</label>
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Nom de la pièce :</label>
                <input type="text" class="form-control" id="title" name="title" value="{{ piece.name }}" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description :</label>
                <textarea class="form-control" id="description" name="description" rows="3" required>{{ piece.description }}</textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image de la pièce :</label>
                <input type="file" class="form-control" id="image" name="image" accept=".jpg, .jpeg, .png, .gif, .webp">
                {% if piece.image %}
                    <div class="mt-3">
                        <img src="{{ asset('uploads/pieces/' ~ piece.image) }}" alt="Image actuelle" width="150">
                    </div>
                {% endif %}
            </div>
            <div class="mb-3">
                <label for="updateAt" class="form-label">Modifier le :</label>
                <input type="date" class="form-control" id="updateAt" name="updateAt" required>
            </div>
            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
            <a href="{{ path('list-pieces') }}" class="btn btn-danger mt-3">Annuler</a>
        </form>
    </div>
</main>
{% endblock %}
