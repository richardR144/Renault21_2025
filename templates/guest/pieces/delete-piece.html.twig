{% extends 'guest/base.html.twig' %}

{% block title %}Supprimer la pièce | guest Renault 21 TD{% endblock %}



{% block main %}
<main id="mainDeletePiece">
    <div class="container">
    
        <h1 class="text-center mb-4">Supprimer la pièce</h1>
        <p>Voulez-vous vraiment supprimer la pièce <strong>{{ piece.name }}</strong> ?</p>
        {% if piece.image %}
            <img src="{{ asset('uploads/pieces/' ~ piece.image) }}" alt="Image de la pièce">
        {% endif %}
        <form method="post" action="{{ path('delete-piece', {'id': piece.id}) }}" style="display: inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('delete_piece_' ~ piece.id) }}">
            <button type="submit" class="btn btn-primary">Oui, supprimer</button>
            <a href="{{ path('list-pieces') }}" class="btn btn-danger">Annuler</a>
        </form>
    </div>
</main>
{% endblock main %}

