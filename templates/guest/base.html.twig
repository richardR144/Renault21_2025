<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{% block meta_description %}Site d\'_echange_ou_de_vente_de_pieces_auto{% endblock %}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <meta name="author" content="Richard R"/>
    <title>	{% block metatitle %}Accueil | guest Renault 21 TD{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('asset/css/styles.css') }}"
          {% if hide_from_screenreaders is defined and hide_from_screenreaders %}aria-hidden="true"{% endif %}>
    <link rel="stylesheet" href="{{ asset('asset/css/profil.css') }}">   
</head>
<body>
    <header>
        <nav class="navHeader">
            <div class="logoHeader">
                <img src="{{ asset('asset/images/logoRenault.png') }}" alt="logo-header">
            </div>
            <div id="burger">
                <span></span>
                <span></span>
                <span></span>
            </div>
                <ul class="ulHeader">
                    <li class="liHeader"><a href="{{ path('home') }}">Accueil</a></li>
                    <li class="liHeader"><a href="{{ path('inscription') }}">Inscription</a></li>
                    {#<li class="liHeader"><a href="{{ path('annonces') }}">Annonces</a></li>#}
                    <li class="liHeader"><a href="{{ path('list-pieces') }}">Pièces</a></li>
                    <li class="liHeader"><a href="{{ path('list-articles') }}">Panthéon</a></li>
                    <li class="liHeader"><a href="{{ path('profil') }}">Profile</a></li>
                    <li class="liHeader"><a href="{{ path('list-messages') }}">Messages</a></li>
                    <li class="liHeader"><a href="{{ path('list-categories') }}">Catégories</a></li>
                    <li class="liHeader">
                    {% if app.user and is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('admin-dashboard') }}">Administration</a>
                    {% endif %}
                    </li>
                    <li class="liHeader">
                    {% if app.user %}
                            <a href="{{ path('logout') }}" class="btn btn-primary">Se déconnecter</a>   
                    {% else %}   
                            <a href="{{ path('connexion') }}" class="btn btn-primary">Se connecter</a>  
                    {% endif %} 
                    </li>
                </ul>
        </nav>
    
        {% for flash_message in app.flashes('success') %}
            <h2 class="alert alert-success color-success">
                {{ flash_message }}
            </h2>
        {% endfor %}
        {% for flash_message in app.flashes('error') %}
            <h2 class="alert alert-danger color-error">
                {{ flash_message }}
            </h2>
        {% endfor %}
    </header>
    

    <main>
        
        {% block main %}
        {% endblock main %}

    </main>


    <footer>
    
        <nav class="navFooter">
            <div class="logoFooter">
                <img src="{{ asset('asset/images/logoRenault.png') }}" alt="logo-renault">
            </div>
        <ul class="ulFooter">
            {#<li class="liFooter"><a href="{{ path('cgu') }}">CGU</a></li>
            <li class="liFooter"><a href="{{ path('politique_de_confidentialité') }}">Politique de confidentialité</a></li>
            <li class="liFooter"><a href="{{ path('newsletters') }}">Newsletters</a></li>
            <li class="liFooter"><a href="{{ path('mentions_legales') }}">Mentions légales</a></li>
            <li class="liFooter"><a href="{{ path('contact') }}">Contact</a></li>#}
            <li class="liFooter">
                <label>
                    <input required type="email" placeholder="Entrez votre email">
                </label>
            </li>
        </ul>
        </nav>

        </footer>
   

{% block javascripts %}
   <script src="{{ asset('asset/css/script.js') }}"></script>
   
   <script>
   function togglePassword(inputId, toggleElement) {
       const passwordInput = document.getElementById(inputId);
       const eyeIcon = toggleElement.querySelector('i');
       
       if (passwordInput.type === 'password') {
           passwordInput.type = 'text';
           eyeIcon.classList.remove('fa-eye-slash');
           eyeIcon.classList.add('fa-eye');
           toggleElement.style.backgroundColor = '#e3f2fd';
       } else {
           passwordInput.type = 'password';
           eyeIcon.classList.remove('fa-eye');
           eyeIcon.classList.add('fa-eye-slash');
           toggleElement.style.backgroundColor = '#f8f9fa';
       }
   }
   </script>
{% endblock javascripts %}
</body>
</html>



