{% extends 'guest/base.html.twig' %}

{% block metatitle %}Lire un message{% endblock metatitle %}

{% block main %}
<div class="container mt-4">
    {% if not app.user %}
        {# Utilisateur NON connecté = Accès refusé #}
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body text-center">
                        <i class="fas fa-lock fa-3x text-warning mb-3"></i>
                        <h3 class="card-title">Accès restreint</h3>
                        <p class="card-text">Vous devez être connecté pour lire vos messages.</p>
                        
                        <div class="mt-4">
                            <a href="{{ path('connexion') }}" class="btn btn-primary mr-2">
                                <i class="fas fa-sign-in-alt"></i> Se connecter
                            </a>
                            <a href="{{ path('inscription') }}" class="btn btn-success">
                                <i class="fas fa-user-plus"></i> S'inscrire
                            </a>
                        </div>
                        
                        <hr class="my-4">
                        <small class="text-muted">
                            Ou parcourez le <a href="{{ path('list-pieces') }}">catalogue des pièces</a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        {# Utilisateur connecté = Contenu normal #}
        <div class="btn-back mb-3">
            <a href="{{ path('list-messages') }}" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Retour à la liste des messages
            </a>
        </div>

        {# Flash messages #}
        {% for flash_message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show">
                {{ flash_message }}
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
            </div>
        {% endfor %}
        {% for flash_message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show">
                {{ flash_message }}
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
            </div>
        {% endfor %}

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-envelope"></i> Message
                        </h4>
                        {% if message.isRead %}
                            <span class="badge badge-success">
                                <i class="fas fa-check"></i> Lu
                            </span>
                        {% else %}
                            <span class="badge badge-primary">
                                <i class="fas fa-envelope"></i> Nouveau
                            </span>
                        {% endif %}
                    </div>

                    <div class="card-body">
                        {# Informations message #}
                        <div class="message-info mb-4">
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-2">
                                        <strong><i class="fas fa-user text-primary"></i> De :</strong>
                                        {{ message.sender.username ?? message.sender.pseudo ?? 'Utilisateur' }}
                                        {% if message.sender.roles and 'ROLE_ADMIN' in message.sender.roles %}
                                            <span class="badge badge-warning ml-1">
                                                <i class="fas fa-crown"></i> ADMIN
                                            </span>
                                        {% endif %}
                                    </p>
                                    <p class="mb-2">
                                        <strong><i class="fas fa-user text-info"></i> À :</strong>
                                        {{ message.receiver.username ?? message.receiver.pseudo ?? 'Utilisateur' }}
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-2">
                                        <strong><i class="fas fa-clock text-muted"></i> Envoyé le :</strong>
                                        {{ message.createdAt|date('d/m/Y à H:i') }}
                                    </p>
                                    {% if message.updatedAt and message.updatedAt != message.createdAt %}
                                        <p class="mb-2">
                                            <strong><i class="fas fa-edit text-muted"></i> Modifié le :</strong>
                                            {{ message.updatedAt|date('d/m/Y à H:i') }}
                                        </p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        {# Contenu du message #}
                        <div class="message-content">
                            <h5><i class="fas fa-comment"></i> Contenu :</h5>
                            <div class="border p-4 mb-4 bg-light rounded">
                                {{ message.content|nl2br }}
                            </div>
                        </div>

                        {# Actions sur le message #}
                        <div class="message-actions">
                            <div class="row">
                                <div class="col-md-6">
                                    {# Marquer comme lu/non lu #}
                                    {% if message.receiver == app.user %}
                                        <form method="post" action="{{ path('read-message', {'id': message.id}) }}" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('read_message_' ~ message.id) }}">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="isReadSwitch" 
                                                       name="isRead" value="1" onchange="this.form.submit()" 
                                                       {% if message.isRead %} checked {% endif %}>
                                                <label class="form-check-label" for="isReadSwitch">
                                                    {% if message.isRead %}
                                                        <i class="fas fa-check-circle text-success"></i> Message lu
                                                    {% else %}
                                                        <i class="fas fa-circle text-muted"></i> Marquer comme lu
                                                    {% endif %}
                                                </label>
                                            </div>
                                        </form>
                                    {% endif %}
                                </div>
                                <div class="col-md-6 text-right">
                                    {# Actions conditionnelles #}
                                    {% if message.sender == app.user %}
                                        <a href="{{ path('update-message', {'id': message.id}) }}" 
                                           class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                    {% endif %}
                                    
                                    {% if message.sender == app.user or message.receiver == app.user %}
                                        <a href="{{ path('delete-message', {'id': message.id}) }}" 
                                           class="btn btn-outline-danger btn-sm"
                                           onclick="return confirm('Supprimer ce message ?');">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer text-center">
                        <a href="{{ path('list-messages') }}" class="btn btn-primary">
                            <i class="fas fa-list"></i> Retour à la liste des messages
                        </a>
                        <a href="{{ path('create-message') }}" class="btn btn-success">
                            <i class="fas fa-reply"></i> Nouveau message
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock main %}
