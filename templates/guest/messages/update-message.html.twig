{% extends 'guest/base.html.twig' %}

{% block metatitle %}Mettre à jour le message | guest Renault 21 TD{% endblock metatitle %}

{% block main %}
<div class="container mt-4">
    {% if not app.user %}
        {# Utilisateur NON connecté = Accès refusé #}
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body text-center">
                        <i class="fas fa-lock fa-3x text-warning mb-3"></i>
                        <h3 class="card-title">Accès restreint</h3>
                        <p class="card-text">Vous devez être connecté pour modifier vos messages.</p>
                        
                        <div class="mt-4">
                            <a href="{{ path('connexion') }}" class="btn btn-primary mr-2">
                                <i class="fas fa-sign-in-alt"></i> Se connecter
                            </a>
                            <a href="{{ path('inscription') }}" class="btn btn-success">
                                <i class="fas fa-user-plus"></i> S'inscrire
                            </a>
                        </div>
                        
                        <hr class="my-4">
                        <small class="text-muted">
                            Ou parcourez le <a href="{{ path('list-pieces') }}">catalogue des pièces</a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        {# Utilisateur connecté = Contenu normal #}
        <div class="btn-back mb-3">
            <a href="{{ path('list-messages') }}" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Retour à la liste des messages
            </a>
        </div>

        {# Flash messages #}
        {% for flash_message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show">
                {{ flash_message }}
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
            </div>
        {% endfor %}
        {% for flash_message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show">
                {{ flash_message }}
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
            </div>
        {% endfor %}

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-header">
                        <h4 class="mb-0">
                            <i class="fas fa-edit"></i> Modifier le message
                        </h4>
                    </div>

                    <div class="card-body">
                        {# Informations message #}
                        <div class="alert alert-info">
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-1">
                                        <strong><i class="fas fa-user"></i> À :</strong>
                                        {{ message.receiver.username ?? message.receiver.pseudo ?? 'Utilisateur' }}
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1">
                                        <strong><i class="fas fa-clock"></i> Envoyé le :</strong>
                                        {{ message.createdAt|date('d/m/Y à H:i') }}
                                    </p>
                                </div>
                            </div>
                        </div>

                        {# Contenu original #}
                        <div class="mb-4">
                            <h6><i class="fas fa-history"></i> Contenu original :</h6>
                            <div class="border p-3 mb-3 bg-light rounded">
                                {{ message.content|nl2br }}
                            </div>
                        </div>

                        {# Formulaire de modification #}
                        <form method="post" action="{{ path('update-message', {'id': message.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('update_message_' ~ message.id) }}">
                            
                            <div class="form-group mb-4">
                                <label for="content">
                                    <strong><i class="fas fa-edit"></i> Nouveau contenu :</strong>
                                </label>
                                <textarea id="content" name="content" class="form-control" 
                                          rows="6" required 
                                          placeholder="Modifiez votre message ici...">{{ message.content }}</textarea>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle"></i> 
                                    Une fois modifié, la date de modification sera visible.
                                </small>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-warning mr-2">
                                    <i class="fas fa-save"></i> Mettre à jour le message
                                </button>
                                <a href="{{ path('read-message', {'id': message.id}) }}" class="btn btn-outline-secondary mr-2">
                                    <i class="fas fa-eye"></i> Voir le message
                                </a>
                                <a href="{{ path('list-messages') }}" class="btn btn-outline-primary">
                                    <i class="fas fa-times"></i> Annuler
                                </a>
                            </div>
                        </form>
                    </div>

                    <div class="card-footer text-center bg-light">
                        <small class="text-muted">
                            <i class="fas fa-exclamation-triangle"></i>
                            Seul l'expéditeur peut modifier un message
                        </small>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock main %}