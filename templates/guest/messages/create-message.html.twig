{% extends 'guest/base.html.twig' %}

{% block metatitle %}Créer un message{% endblock metatitle %}

{% block main %}
    <div class="container">
        <h1 class="text-center mb-4">Créer un message</h1>

        {% for flash_message in app.flashes('success') %}
            <div class="alert alert-success">{{ flash_message }}</div>
        {% endfor %}

        {% for flash_message in app.flashes('error') %}
            <div class="alert alert-danger">{{ flash_message }}</div>
        {% endfor %}

        <form method="post" action="{{ path('guest-messages-create-message') }}">
            <div class="form-group">
                <label for="content">Contenu</label>
                <textarea id="content" name="content" class="form-control" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Créer le message</button>
            <a href="{{ path('guest-messages-list-messages') }}" class="btn btn-danger">Annuler</a>
        </form>
    </div>
{% endblock main %}