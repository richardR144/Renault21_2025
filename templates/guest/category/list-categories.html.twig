{% extends 'guest/base.html.twig' %}

{% block metatitle %}Liste des catégories | Renault 21 TD{% endblock metatitle %}

{% block main %}
<div class="container">
    <h1 class="text-center mb-4">Liste des catégories</h1>
    <div class="card p-4 shadow-sm" style="max-width: 600px; margin: auto;">
        {% if categories is not empty %}
            <ul class="list-group">
                {% for category in categories %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center gap-2">
                            {% if category.image %}
                                <img src="{{ asset('uploads/categories/' ~ category.image) }}" alt="{{ category.name }}" style="width:48px; height:48px; object-fit:cover; border-radius:8px;">
                            {% endif %}
                        <span>{{ category.name }}</span>
                        </div>
                        <a href="{{ path('details-category', {'id': category.id}) }}" class="btn btn-primary btn-sm">Détails de la catégorie</a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <div class="alert alert-info text-center mb-0">Aucune catégorie trouvée.</div>
        {% endif %}
    </div>
</div>
{% endblock main %}