{% extends 'moderator/base.html.twig' %}



{% block main %}
<table class="table table-striped align-middle"  style="width:100%; height:70vh;">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Contenu</th>
            <th>Image</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
    {% for article in articles %}
        <tr>
            <td>{{ article.title }}</td>
            <td>{{ article.content }}</td>
            <td>
                {% if article.image %}
                    <img src="{{ asset('uploads/images/' ~ article.image) }}" alt="{{ article.title }}" style="height: 80px; object-fit: cover;">
                {% endif %}
            </td>
            <td class="text-center">
                <a href="{{ path('moderator-update-article', {'id': article.id}) }}" class="btn btn-warning btn-sm">Modifier l'article</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4" class="text-center">Aucun article pour le moment.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

