{% extends 'moderator/base.html.twig' %}

{% block main %}
<table class="table table-striped align-middle" style="margin-left:2%;">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Prix (€)</th>
            <th>Image</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
    {% for piece in pieces %}
        <tr>
            <td>{{ piece.name }}</td>
            <td>{{ piece.description }}</td>
            <td>{{ piece.price }}</td>
            <td>
                {% if piece.image %}
                    <img src="{{ asset('uploads/images/' ~ piece.image) }}" alt="{{ piece.name }}" style="width: 80px; height: 80px; object-fit: cover;">
                {% endif %}
            </td>
            <td class="text-center">
                <a href="{{ path('moderator-update-piece', {'id': piece.id}) }}" class="btn btn-warning btn-sm">Modifier la pièce</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5" class="text-center">Aucune pièce pour le moment.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}