{% extends 'admin/base.html.twig' %}

{% block main %}

<div class="width-message">
    <div class="title-message">
        <h1>Gestion des catégories</h1>
        <h2>Liste des catégories</h2>
    </div>

    {% for flash_message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endfor %}

    {% for flash_message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ flash_message }}
        </div>
    {% endfor %}

    <section class="text-center">
        <a href="{{ path('admin-create-category') }}" class="btn btn-success mb-3" >Créer une catégorie</a>
        <table class="table table-striped table-bordered mt-4">
            <thead class="table-primary">
                <tr class="text-center">
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <form method="get" action="{{ path('admin-update-category', {'id': category.id}) }}" style="display:inline;">
                            <button type="submit" class="btn btn-primary btn-sm" style="padding: 10px; margin-right: 8px;">Modifier</button>
                        </form>
                        <form method="post" action="{{ path('admin-delete-category', {'id': category.id}) }}" style="display:inline;" onsubmit="return confirm('Supprimer cette catégorie ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_category_' ~ category.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm" style="padding: 10px;">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">Aucune catégorie trouvée.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
</div>
{% endblock main %}

