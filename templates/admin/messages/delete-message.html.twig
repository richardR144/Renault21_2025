{% extends 'admin/base.html.twig' %}
{% block main %}
<div class="title-message">
    <h1>Gestion des messages</h1>       
    <h2>Suppression du message</h2>

    {% for flash_message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endfor %}

    {% for flash_message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ flash_message }}
        </div>
    {% endfor %}
    <p>Êtes-vous sûr de vouloir supprimer ce message ?</p>
    <form method="post" action="{{ path('admin-delete-message', {'id': message.id}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('delete_message_' ~ message.id) }}">
        <button type="submit" onclick="return confirm('Supprimer ce message ?')" class="btn btn-danger">Supprimer le message</button>
        <a href="{{ path('admin-messages') }}" class="btn btn-secondary">Annuler</a>
    </form>
</div>
{% endblock main %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin/messages.css') }}">
{% endblock stylesheets %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/admin/messages.js') }}"></script>
{% endblock javascripts %}
{% block title %}Suppression du message{% endblock title %}
{% block description %}Page de confirmation de suppression d'un message dans l'interface d'administration.{% endblock description %}