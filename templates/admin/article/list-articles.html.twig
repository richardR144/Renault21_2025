{% extends 'admin/base.html.twig' %}

{% block main %}
<div class="title-article">
    <h1>Gestion des articles</h1>
    <h2>Créer un nouvel article</h2>
    </div>

    {% for flash_message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endfor %}

    {% for flash_message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ flash_message }}
        </div>
    {% endfor %}
    <form method="post" enctype="multipart/form-data" action="{{ path('admin-create-article') }}">
        <div class="form-group">
            <label for="title">Titre :</label>
            <input type="text" name="title" id="title" required>
        </div>
        <div class="form-group">
            <label for="content">Texte :</label>
            <textarea name="content" id="content" required></textarea>
        </div>
        <div class="form-group">
            <label for="image">Image :</label>
            <input type="file" name="image" id="image" accept="image/*" required>
        </div>
        <button type="submit"  class="btn btn-primary">Créer l'article</button>
    </form>

    <h2 class="title-article">Articles existants</h2>
    <ul>
        {% for article in articles %}
            <li>
                <article class="admin-article">
                <div>

                    <h3>{{ article.title }}</h3>
    
                    <p>{{ article.content|slice(0, 100) ~ '...' }}<p>
        
                </div>
                <div>
                {% if article.image %}
                    <img src="{{ asset('uploads/images/' ~ article.image) }}" alt="{{ article.title }}">
                {% endif %}
                </div>
                </article>
            
            
               
                <form method="post" action="{{ path('admin-delete-article', {'id': article.id}) }}">
                 <a href="{{ path('admin-update-article', {'id': article.id}) }}" class="btn btn-warning">Modifier l'article</a>
                    <input type="hidden" name="_token" value="{{ csrf_token('delete_article_' ~ article.id) }}">
                    <button type="submit" onclick="return confirm('Supprimer cet article ?')" class="btn btn-danger">Supprimer l'article</button>
                </form>
              
            </li>
        {% else %}
            <li>Aucun article pour le moment.</li>
        {% endfor %}
    </ul>
{% endblock %}